<div class="register col-md-6">

<form method="POST" action="/user/<%= user.id %>" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group profile_pic">
    ADD IMAGE
    <input type="file" name="filename" id="filename" class="form-control hide_file">
  </div>
  <div class="form-group">
    <label for="name">NAME</label>
    <input type="text" name="name" id="name" class="form-control" value="<%= currentUser.name %>" >
  </div>
  <div class="form-group">
    <label for="username">USERNAME</label>
    <input type="text" name="username" id="username" class="form-control" value="<%= currentUser.username %>">
  </div>
  <div class="form-group">
    <label for="email">EMAIL</label>
    <input type="email" name="email" id="email" class="form-control" value="<%= currentUser.email %>">
  </div>
  <div class="form-group">
    <label for="password">PASSWORD</label>
    <input type="password" name="password" id="password" class="form-control">
  </div>
  <div class="form-group">
    <label for="passwordConfirmation">PASSWORD CONFIRMATION</label>
    <input type="password" name="passwordConfirmation" id="passwordConfirmation" class="form-control">
  </div>

  <button class="btn registerButton">Edit</button>

</form>
